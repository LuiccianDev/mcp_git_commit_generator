{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.venv": true,
        "**/__pycache__/**": true,
        "**/.ruff_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.mypy_cache/**": true
    },
    "explorer.compactFolders": false,
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    }
}
